<!DOCTYPE html>
<html>
<head>
    <% include ../partials/head %>
</head>
<body>
    <header>
        <% include ../partials/navbar %>
    </header>
    <main>
        
        <div class="jumbotron">
            <div class="row">
                <div class="col-3">
                <h1>Make Bid For:</h1>
                </div>
                <div class="col-6">
                    <form action="/bids/events/<%=event._id%>" method="POST">
                    <h1><%=event.title%></h1>
                            <div class="form-group row">
                                Service Type: <select name="title">
                                    <% event.servicesNeeded.forEach((service)=>{ %>
                                        <option value="<%=service%>"><%=service%></option>
                                    <% }) %>
                                </select>
                            </div>
                            <div class="form-group row">
                                <label for="colFormLabel" class="col-sm-6 col-form-label">Bid Amount: </label>
                                <input class="form-control" type="number" name="bidAmount">
                            </div>
                            <div class="form-group row">
                                <label for="colFormLabel" class="col-sm-6 col-form-label">Message: </label>
                                <input class="form-control" type="text" name="note">
                            </div><br/>
                            <div class="form-group row">
                            <button class="btn btn-round btn-lg" type="submit">Make New Bid</button><br/>
                            </div>
                    </form> 
                </div>
                <div class="col-3"></div>
            </div>
        </div>



    </main>
    <% include ../partials/footer %>
</body>
</html>