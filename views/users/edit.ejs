<!DOCTYPE html>
<html>
<head>
        <% include ../partials/head %>
</head>
<body>
    
        <header>
            <% include ../partials/navbar %>
        </header>
        <main>
            
            <section>
                <h1>Edit User</h1>
                <form action="/users/<%=currentUserId%>?_method=PUT" method="POST">
                    First Name: <input type="text" name="firstname" autocomplete="off" value="<%=user.firstname%>"> <br>
                    Last Name:  <input type="text" name="lastname" autocomplete="off" value="<%=user.lastname%>"> <br>
                    Username:   <input type="text" name="username" autocomplete="off" value="<%=user.username%>"> <br>
                    Password:   <input type="text" name="password" autocomplete="off" value="<%=user.password%>"> <br>
                    Email:      <input type="text" name="email" autocomplete="off" value="<%=user.email%>"> <br>
                    <!-- Services:   <br>
                    Chef:       <input type="checkbox" name="chef" value=""> <br> -->
                    Zip Code:   <input type="text" name="zipCode" autocomplete="off" value="<%=user.zipCode%>"> <br>
                    Image:      <input type="text" name="image" autocomplete="off" value="https://source.unsplash.com/collection/4065723/480x480"> <br>
                    <br> <button type="submit">Update Profile</button>
                </form>

                <form action="/users/<%=currentUserId%>?_method=DELETE" method="POST">
                    <br> <button type="submit">Delete Profile</button>
                </form>
            </section>
    
            <br>
    
           
    
        </main>

    <% include ../partials/footer %>
</body>
</html>