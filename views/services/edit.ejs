                            <div class="form-group row">
                                <label for="colFormLabel" class="col-sm-6 col-form-label">Description: </label>
                                <input class="form-control" type="text" name="about" value="<%=service.about%>">
                            </div>
                            <div class="form-group row">
                                <label for="colFormLabel" class="col-sm-6 col-form-label">Image (URL): </label>
                                <input class="form-control" type="text" name="images" value="<%=service.images%>">
