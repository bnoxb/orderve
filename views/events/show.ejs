<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Page Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="/css/main.css" />
</head>
<body>
    <header>
            <nav>
                <a href='/'>Home</a>
                <a href='/about'>About</a>
                <a href='/events'>Events</a>
                <a href='/services'>Orderves</a>
                <% if (currentSession.logged){%>
                    <a href='/users/<%=currentUserId%>'>Profile</a>
                    <a href='/auth/logout'>Logout</a>
                <%} else {%>
                    <a href='/auth/loginPage'>Login</a>
                <%}%>
            </nav>
    </header>
    <h1><%=event.title%></h1>
    
        <img src="<%=event.image%>">
        <p>Location: <%=event.location%></p>
        <p>Date/Time: <%=event.date%></p>
        <p>Description: <%=event.description%></p>
        <p>Host: <%=user.username%></p>
        <p>Services Needed: <%=event.servicesNeeded%></p>
        <p>Budget: <%=event.budget%><p>
        
    </ul>

    <% if(currentSession.logged === true){%>
        <%if(currentUserId.toString() === user._id.toString()){%>
            <a href='/events/<%=event._id%>/edit'>Edit</a>
                <%if(event.services.length > 0){%>
            <a href='/events/<%=event._id%>/bids/'>Show Bids</a>
                <%}%>   
        <% }else if(currentUser.services.length > 0 && currentUser.services[0].title === event.servicesNeeded) {%>
            <a href='/bids/new/<%=event._id%>'><button id='bid-button'>Make Bid</button></a>
        <% } %>
   <% }%>

   

