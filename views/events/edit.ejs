<!DOCTYPE html>
<html>
<head>
   <% include ../partials/head %>
</head>
<body>
    <header>
          <% include ../partials/navbar %>
    </header>
<h1> Edit <%=event.title%></h1>


        <%let year = event.date.getFullYear()%>
        <%let month = event.date.getMonth()%>
        <%let day = event.date.getDate()%>
        <%let hours = event.date.getHours()%>
        <%let minute = event.date.getMinutes()%>
        <%let theMonth = month+1%>
        <%if(theMonth < 10){%>
            <%theMonth = '0' + theMonth%>
        <%}%>
         <%if(day < 10){%>
            <%day = '0' + day%>
        <%}%>
         <%if(hours < 10){%>
            <%hours = '0' + hours%>
        <%}%>
         <%if(minute < 10){%>
            <%minute = '0' + minute%>
        <%}%>
       <%let correctDate = year + '-' + theMonth + '-' + day + 'T' + hours + ':' + minute%>
    
<form action='/events/<%=event._id%>?_method=PUT' method='POST'>
        Title: <input type='text' name='title' value='<%=event.title%>'><br>
        Host: <input type='text' name='host' value='<%=user.username%>' readonly><br>
        Location: <input type='text' name='location' value='<%=event.location%>'><br>
        Date & Time: <input type='datetime-local' name='date' value='<%=correctDate%>'><br>
        Description: <input type='text' name='description' value='<%=event.description%>'><br>
        Budget: <input type='number' name='budget' value='<%=event.budget%>'><br>
        Services Needed: <input type='checkbox' name='servicesNeeded' value='<%=event.servicesNeeded%>'><br>
        Image: <input type='text' name='image' value='https://source.unsplash.com/collection/4065723/480x480'>
        <button type='submit'>Submit Changes</button>
    </form><br>
    <form action="/events/<%=event._id%>?_method=DELETE" method="POST">
            <input type="submit" value="Delete Event"/>
        </form>
<!--Add delete feature based on if the event host is the current user logged in-->

<% include ../partials/footer %>
</body>
</html>