            <a href='/events'>Events</a>
            <a href='/users'>Orderves</a>
            <a href='/users/<%=userId%>'>Profile</a>
        </nav>
    </header>
<h1> Edit <%=event.title%></h1>
<form action='/events/<%=event._id%>?_method=PUT' method='POST'>
        Title: <input type='text' name='title' value='<%=event.title%>'><br>
        Host: <input type='text' name='host' value='<%=user.username%>' readonly><br>
        Location: <input type='text' name='location' value='<%=event.location%>'><br>
        Date/Time: <input type='datetime-local' name='date' value='<%=event.date%>'><br>
        Description: <input type='text' name='description' value='<%=event.description%>'><br>
        Budget: <input type='number' name='budget' value='<%=event.budget%>'><br>
        Services Needed: <input type='checkbox' name='services' value='<%=services.title%>'><br>
        <button type='submit'>Submit Changes</button>
    </form>
    
    <form action="/events/<%=event._id%>?_method=DELETE" method="POST">
            <input type="submit" value="Delete Event"/>
        </form>
<!--Add delete feature based on if the event host is the current user logged in-->
</body>
</html>